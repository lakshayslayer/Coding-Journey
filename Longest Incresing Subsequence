#include <bits/stdc++.h>
using namespace std;
 


int _lis(int a[],int n){

    int dp[n];
    dp[0]=1;

    for(int i=1;i<n;i++){
        dp[i]=1;
        for(int j=0;j<i;j++){
            if(a[i]>a[j] && dp[i]<dp[j]+1)
                dp[i]=dp[j]+1;
        }
    }

    return *max_element(dp,dp+n);
   
}

int lcs(int a[],int b[],int n){

    int dp[n+1][n+1];
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            dp[i][j]=-1;
        }
    }

    for(int i=0;i<n+1;i++){
        for(int j=0;j<n+1;j++){
            if(i==0  ||  j==0)
                dp[i][j]=0;
            else if(a[i-1]==b[j-1])
                dp[i][j]=1+dp[i-1][j-1];
            else
                dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
        }
    }

    return dp[n][n];
}

int main(){
    int n;
    cin>>n;
    int a[n],b[n];;
    for(int i=0;i<n;i++){
        cin>>a[i];
        b[i]=a[i];
    } 

    
    sort(b,b+n);
    cout<< lcs(a,b,n)<<endl;

    cout<<_lis(a,n)<<endl;

    return 0;

}
