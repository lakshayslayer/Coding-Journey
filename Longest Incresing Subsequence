#include <bits/stdc++.h>
using namespace std;
 

//Method 1
int _lis(int a[],int n){

    int dp[n];
    dp[0]=1;

    for(int i=1;i<n;i++){
        dp[i]=1;
        for(int j=0;j<i;j++){
            if(a[i]>a[j] && dp[i]<dp[j]+1)
                dp[i]=dp[j]+1;
        }
    }

    return *max_element(dp,dp+n);
   
}

// Method 2
int lcs(int a[],int b[],int n){

    int dp[n+1][n+1];
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            dp[i][j]=-1;
        }
    }

    for(int i=0;i<n+1;i++){
        for(int j=0;j<n+1;j++){
            if(i==0  ||  j==0)
                dp[i][j]=0;
            else if(a[i-1]==b[j-1])
                dp[i][j]=1+dp[i-1][j-1];
            else
                dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
        }
    }

    return dp[n][n];
}

//Method 3

int f(int idx, int prev_idx, int n, int a[],vector<vector<int> >& dp)     
{
    if (idx == n) 
        return 0;
    
    if (dp[idx][prev_idx + 1] != -1) 
        return dp[idx][prev_idx + 1];
    
    int notTake = 0 + f(idx + 1, prev_idx, n, a, dp);
    int take = INT_MIN;
    if (prev_idx == -1 || a[idx] > a[prev_idx]) {
        take = 1 + f(idx + 1, idx, n, a, dp);
    }
 
    return dp[idx][prev_idx + 1] = max(take, notTake);
}
      
int LIS(int n, int a[])
{
    vector<vector<int> > dp(n + 1, vector<int>(n + 1, -1));
    return f(0, -1, n, a, dp);
}

int main(){
    int n;
    cin>>n;
    int a[n],b[n];;
    for(int i=0;i<n;i++){
        cin>>a[i];
        b[i]=a[i];
    } 

    
    sort(b,b+n);
    cout<< lcs(a,b,n)<<endl;

    cout<<_lis(a,n)<<endl;
    cout<<LIS(n,a)<<endl;

    return 0;

}
